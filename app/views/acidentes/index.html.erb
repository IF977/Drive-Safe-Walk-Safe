<div class="page-header">
  <h1>Home</h1>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Ocorrências</h3>
  </div>
  <div class="panel-body">
    <p>Filtros</p>
      
    <%= form_tag({controller: "acidentes", action: "index"}, method: "get", class: "") do %>
      <div class="form-group"> 
        <%= label_tag(:select_vitimas, "Com ou sem vítimas?", { class: 'control-label'}) %>
        <%= select_tag(:select_vitimas, options_for_select([['Apenas com vítimas', :com], ['Apenas sem vítimas', :sem],['Com e sem vítimas', :com_sem]], :com_sem), { class: 'form-control'})  %>
      </div>
      
      <div class="form-group">
        <%= label_tag(:input_date_start, "A partir de", { class: 'control-label'}) %>
        <%= date_field(:input_date_start, :date_start) %>
      </div>
      
      <div class="form-group">
        <%= label_tag(:input_date_start, "Até", { class: 'control-label'}) %>
        <%= date_field(:input_date_start, :date_end) %>
      </div>
      
      <%= submit_tag("Consultar", { class: 'btn btn-primary'}) %>
    <% end %>
  </div>
  
  <table class="table">
    <thead>
      <tr>
        <th>Código</th>
        <th>Data/Hora</th>
        <th>Vítimas</th>
        <th>Descrição</th>
        <th>Bairro</th>
        <th>Natureza</th>
        <th>Detalhes</th>
      </tr>
    </thead>
    <tbody>
      <% @acidentes.each do |acidente| %>
        <tr>
          <td><%= acidente.id %></td>
          <td><%= acidente.data_hora.strftime('%d/%m/%Y %H:%M:%S') %></td>
          <td><%= acidente.vitimas %></td>
          <td><%= acidente.descricao %></td>
          <td><%= acidente.bairro %></td>
          <td><%= acidente.natureza %></td>
          <td><%= link_to 'Detalhes', acidente_path(acidente) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>